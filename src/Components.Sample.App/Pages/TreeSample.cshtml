@page "/Tree"
@using TreeComponent

<Tree Items=@Items ChildSelector=@(item => item?.Childs)>
    <ItemTemplate>@context.Text</ItemTemplate>
</Tree>

@functions {

    public class Item
    {
        public string Text { get; set; }
        public IEnumerable<Item> Childs { get; set; }
    }

    IEnumerable<Item> Items = new[]
    {
        new Item { Text = "Item 1" },
        new Item {
            Text = "Item 2",
            Childs = new []
            {
                new Item { Text = "Item 2.1" },
                new Item { Text = "Item 2.2" },
                new Item { Text = "Item 2.3" },
                new Item { Text = "Item 2.4" }

            }},
        new Item { Text = "Item 3" },
        new Item { Text = "Item 4" },
        new Item { Text = "Item 5" },
        new Item { Text = "Item 6" },
};

}
